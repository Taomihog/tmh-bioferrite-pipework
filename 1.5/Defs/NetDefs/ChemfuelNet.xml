      <li Class="PipeSystem.CompProperties_PipeValve">
        <pipeNet>TMH_BioferriteNet</pipeNet>
        <alwaysLinkToPipes>true</alwaysLinkToPipes>
      </li>
      <li Class="CompProperties_Flickable">
        <commandTexture>Things/Item/Resource/Bioferrite</commandTexture>
        <commandLabelKey>TMH_ChemValve</commandLabelKey>
