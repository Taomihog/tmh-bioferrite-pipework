<Defs>
  <PipeSystem.PipeNetDef>
    <defName>TMH_BioferriteNet</defName>
    <resource>
      <name>Bioferrite</name>
      <unit>l</unit>
      <color>(0.68, 0.43, 0.19)</color>
      <onlyShowStored>True</onlyShowStored>
      <offTexPath>Things/Item/Resource/Bioferrite</offTexPath>
    </resource>
    <pipeDefs>
      <li>TMH_BioferritePipe</li>
      <li>TMH_UndergroundBioferritePipe</li>
    </pipeDefs>
